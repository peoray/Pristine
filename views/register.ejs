<%- include("partials/header") %>

    <form action="/register" method='POST' class='register'>
        <div class="left-box">
            <h1>Sign Up</h1>
            <input type="text" name='name' placeholder="Enter your fullname">
            <input type="text" name='username' placeholder="Enter your username">
            <input type="email" name='email' placeholder="Enter your email">
            <input type="password" name='password' placeholder="Enter your password">
            <input type="password" name='password2' placeholder="Retype your password">
            <input type="submit" value="Sign Up">
        </div>

        <div class="right-box">
            <span class="social-sign-up">Sign Up with
                <br> Social Network</span>
            <a href="/auth/google" class="btn google">
                Sign Up with Google+
            </a>
            <a href="/auth/facebook" class="btn facebook">
                Sign Up with Facebook
            </a>
        </div>

        <div class="or">OR</div>
    </form>

    <%- include("partials/footer") %>